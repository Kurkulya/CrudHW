<div>
  <%= form_with(model: task, local: true) do |form| %>
      <div>
        <%= form.check_box :is_done %>
        <%= form.text_area :name %>
        <%= form.text_area :description %>
        <%= form.text_area :importance %>
        <%= form.date_select :expiry, order: [:day, :month, :year] %>
      </div>
      <div>
        <%= form.submit %>
        <%= button_to 'Back', tasks_path %>
      </div>
  <% end %>
</div>